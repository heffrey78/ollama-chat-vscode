{
  "name": "ollama-chat-vscode",
  "displayName": "Ollama Chat",
  "description": "ChatGPT-style chat with Ollama models in VSCode",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ollama-chat-vscode.startChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ollama-chat-vscode.startChat",
        "title": "Start Ollama Chat"
      }
    ],
    "configuration": {
      "title": "Ollama Chat",
      "properties": {
        "ollama-chat-vscode.modelName": {
          "type": "string",
          "default": "llama3.1",
          "description": "The name of the Ollama model to use for chat"
        },
        "ollama-chat-vscode.workingDirectory": {
          "type": "string",
          "default": "",
          "description": "The working directory for Ollama Chat. If empty, the user's home directory will be used."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/node-fetch": "^2.6.11",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "ollama": "^0.5.8"
  }
}
